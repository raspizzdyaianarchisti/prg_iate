#include <iostream>
#include <clocale>
#include <stdio.h>

using namespace std;

int main()
{
    setlocale(LC_CTYPE,"rus");
    float a,b,c;
    printf("Введите 5 дробных чисел\n");
    for (int i=0;i<5;i++)
    {
        printf("Введите число %i: ",i+1);
        cin>>a;
        b+=a;
        c=b;
        c=b/(i+1);
        printf("Среднее арифметическое введенных на данный момент чисел = %.3f\n",c);
    }
}
